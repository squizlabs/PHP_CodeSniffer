{
    "name": "symplify/php7_codesniffer",
    "description": "PHP7_CodeSniffer tokenizes PHP files and detects violations of a defined set of coding standards.",
    "keywords": ["phpcs", "standards", "php7", "code sniffer"],
    "license": "MIT",
    "authors": [
        { "name": "Tomáš Votruba", "email": "tomas.vot@gmail.com" },
        { "name": "Greg Sherwood" }
    ],
    "require": {
        "php": "^7.0",
        "ext-tokenizer": "*",
        "ext-xmlwriter": "*",
        "ext-simplexml": "*",
        "squizlabs/php_codesniffer": "3.0.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\PHP7_CodeSniffer\\": "src",
            "Symplify\\PHP7_CodeSniffer\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/phpcs",
        "bin/phpcbf"
    ]
}
