{
    "name": "symplify/php7_codesniffer",
    "description": "PHP7_CodeSniffer tokenizes PHP files and detects violations of a defined set of coding standards.",
    "keywords": ["phpcs", "standards", "php7", "code sniffer", "symplify"],
    "license": "MIT",
    "authors": [
        { "name": "Tomáš Votruba", "email": "tomas.vot@gmail.com" },
        { "name": "Greg Sherwood" }
    ],
    "require": {
        "php": "^7.0",
        "ext-tokenizer": "*",
        "ext-simplexml": "*",
        "squizlabs/php_codesniffer": "3.0.x-dev",

        "symplify/php7-codesniffer/configuration": "@dev",
        "symplify/php7-codesniffer/console": "@dev",
        "symplify/php7-codesniffer/dependency-injection": "@dev",
        "symplify/php7-codesniffer/reporter": "@dev",
        "symplify/php7-codesniffer/ruleset": "@dev",
        "symplify/php7-codesniffer/sniff-finder": "@dev",
        "symplify/php7-codesniffer/files": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0"
    },
    "repositories": [
        { "type": "path", "url": "packages/configuration" },
        { "type": "path", "url": "packages/console" },
        { "type": "path", "url": "packages/dependency-injection" },
        { "type": "path", "url": "packages/reporter" },
        { "type": "path", "url": "packages/ruleset" },
        { "type": "path", "url": "packages/sniff-finder" },
        { "type": "path", "url": "packages/files" }
    ],
    "autoload": {
        "psr-4": {
            "Symplify\\PHP7_CodeSniffer\\": "src",
            "Symplify\\PHP7_CodeSniffer\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/php7cs",
        "bin/phpcs",
        "bin/phpcbf"
    ]
}
