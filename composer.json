{
    "name": "symplify/php7_codesniffer",
    "description": "PHP_CodeSniffer tokenizes PHP, JavaScript and CSS files and detects violations of a defined set of coding standards.",
    "keywords": ["phpcs", "standards", "php7", "code sniffer"],
    "license": "MIT",
    "authors": [
        { "name": "Tomáš Votruba", "email": "tomas.vot@gmail.com" },
        { "name": "Greg Sherwood", "role": "lead" }
    ],
    "support": {
        "wiki": "https://github.com/squizlabs/PHP_CodeSniffer/wiki"
    },
    "require": {
        "php": "^5.6|^7.0",
        "ext-tokenizer": "*",
        "ext-xmlwriter": "*",
        "ext-simplexml": "*",
        "squizlabs/php_codesniffer": "3.0.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "PHP_CodeSniffer\\": "src",
            "PHP_CodeSniffer\\Tests\\": "tests"
        },
        "files": ["autoload.php"]
    },
    "bin": [
        "bin/phpcs",
        "bin/phpcbf"
    ]
}
